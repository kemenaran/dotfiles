# Generic shell settings
# (compatible with bash and zsh) 

# Env
export EDITOR=nano

# Key bindings
stty quit ^Q  # Bind Ctrl+Q to SIGQUIT

# Aliases
alias g=git
alias gutx=gitx
alias be='bundle exec'

# Paths
## Default path
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
## Sublime Text
export PATH="/Applications/Sublime Text.app/Contents/SharedSupport/bin:$PATH"
## Rust binaries
export PATH="$HOME/.cargo/bin:$PATH"

# Homebrew
## Add to path
eval "$(/opt/homebrew/bin/brew shellenv)"
## Auto-update Homebrew every month (default is 60)
export HOMEBREW_AUTO_UPDATE_SECS="2592000"

# Difftastic
export DFT_DISPLAY=inline

# Import rbenv helpers (and cache them using zsh's evalcache)
eval "$(rbenv init - zsh)"
# Import nodenv (and cache them using zsh's evalcache)
eval "$(nodenv init - zsh)"

# Import local settings for this machine
if [ -f ~/.profile.local ]; then
  source ~/.profile.local
fi
