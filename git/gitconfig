[user]
	email = kemenaran@gmail.com
	name = Pierre de La Morinerie
[include]
	path = ~/.gitconfig.local
[push]
	default = current
[alias]
	s = status
	ch = checkout
	sw = switch
	suu = submodule update --init --recursive
	sb = submodule foreach --recursive git branch
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	pfo = push --force-with-lease origin
	track = "!f() { : git branch ; local b=${1-main} ; git branch --set-upstream-to=origin/$b ; }; f"
	test = "!f() { local r=$(echo "$1" | cut -d":" -f1) ; local b=$(echo "$1" | cut -d":" -f2) ; git fetch $r && git checkout $r/$b ; }; f"
	feat = "!f() { local b=${2-main} ; git checkout $b && git pull && git checkout -b \"$1\" && git track $b; }; f"
	fetch-pr = "!f() { local r=${2-origin} ; git fetch $r --force pull/$1/head:pr$1 && git checkout pr$1; }; f"
    	fetch-mr = "!f() { local r=${2-origin} ; git fetch $r merge-requests/$1/head:mr-$r-$1 && git checkout mr-$r-$1; }; f"
	cleanb = "!git branch --merged | grep  -v '\\*\\|master\\|staging\\|dev' | xargs -n 1 -I % bash -c 'git push --delete origin % && git branch -d %'"
	# Aliases for pushing a stack of PRs
	# Lifted from https://andrewlock.net/pushing-a-whole-stack-of-branches-with-a-single-git-command/
	default-branch = "!git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'"
	merge-base-origin ="!f() { git merge-base ${1-HEAD} origin/$(git default-branch); };f "
	stack = "!f() { \
		local branch=${1-HEAD}; \
		local base=$(git merge-base-origin $branch); \
		git --no-pager log --decorate-refs=refs/heads --simplify-by-decoration --pretty=format:\"%(decorate:prefix=,suffix=,tag=,separator=%n)\" $base..$branch; \
	}; f"
	push-stack = "!f() { local b=${1-HEAD}; git stack $b | xargs -I {} git push --force-with-lease origin {}; }; f"
[merge]
	tool = opendiff
[core]
	excludesfile = ~/.gitignore
	quotepath = false
	trustctime = false
	precomposeunicode = true
[color]
	ui = true
	diff = true
	status = true
	branch = auto
[mergetool]
	keepBackup = false
[rebase]
	autosquash = true
	autostash = true
	updateRefs = true
[pull]
	rebase = true
[format]
	pretty = oneline
[log]
	follow = true
[diff]
	algorithm = histogram
	compactionHeuristic = true
        tool = difftastic
	external = difft
[difftool]
        prompt = false
[pager]
        difftool = true
[credential]
	helper = osxkeychain
[rerere]
	enabled = true
[difftool "difftastic"]
        cmd = difft --display inline "$LOCAL" "$REMOTE"
[fetch]
	prune = true
[init]
	defaultBranch = main
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
[absorb]
	maxStack = 20
