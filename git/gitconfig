[user]
	email = kemenaran@gmail.com
	name = Pierre de La Morinerie
[include]
        path = ~/.gitconfig.local
[push]
	default = simple
[alias]
	s = status
	ch = checkout
	suu = submodule update --init --recursive
	sb = submodule foreach --recursive git branch
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	pfo = push --force origin
	track = "!f() { : git branch ; local b=${1-master} ; git branch --set-upstream-to=upstream/$b ; }; f"
        cleanb = "!f() { : git branch ; git checkout master ; git pull ; git push origin :$1 ; git branch -d $1 ; }; f"
        test = "!f() { local r=$(echo "$1" | cut -d":" -f1) ; local b=$(echo "$1" | cut -d":" -f2) ; git fetch $r && git checkout $r/$b ; }; f"
	feat = "!f() { local b=${2-master} ; git checkout $b && git pull && git checkout -b \"$1\" && git track $b; }; f"
[merge]
	tool = opendiff
[core]
	excludesfile = ~/.gitignore_global
	quotepath = false
	trustctime = false
	precomposeunicode = true
[color]
	ui = true
  	diff = true
	status = true
	branch = auto
[mergetool]
	keepBackup = false
[rebase]
	autosquash = true
	autostash = true
[pull]
	rebase = true
[format]
	pretty = oneline
[log]
	follow = true
[diff]
	compactionHeuristic = true
