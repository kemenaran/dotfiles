[user]
	email = kemenaran@gmail.com
	name = Pierre de La Morinerie
[include]
	path = ~/.gitconfig.local
[push]
	default = simple
[alias]
	s = status
	ch = checkout
	sw = switch
	suu = submodule update --init --recursive
	sb = submodule foreach --recursive git branch
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	pfo = push --force origin HEAD
	track = "!f() { : git branch ; local b=${1-master} ; git branch --set-upstream-to=upstream/$b ; }; f"
	test = "!f() { local r=$(echo "$1" | cut -d":" -f1) ; local b=$(echo "$1" | cut -d":" -f2) ; git fetch $r && git checkout $r/$b ; }; f"
	feat = "!f() { local b=${2-master} ; git checkout $b && git pull && git checkout -b \"$1\" && git track $b; }; f"
	fetch-pr = "!f() { local r=${2-origin} ; git fetch $r --force pull/$1/head:pr$1 && git checkout pr$1; }; f"
	cleanb = "!git branch --merged | grep  -v '\\*\\|master\\|staging\\|dev' | xargs -n 1 -I % bash -c 'git push --delete origin % && git branch -d %'"
[merge]
	tool = opendiff
[core]
	excludesfile = ~/.gitignore
	quotepath = false
	trustctime = false
	precomposeunicode = true
[color]
	ui = true
	diff = true
	status = true
	branch = auto
[mergetool]
	keepBackup = false
[rebase]
	autosquash = true
	autostash = true
[pull]
	rebase = true
[format]
	pretty = oneline
[log]
	follow = true
[diff]
	algorithm = histogram
	compactionHeuristic = true
[credential]
	helper = osxkeychain
[rerere]
	enabled = true
[fetch]
	prune = true
[init]
	defaultBranch = main
